            android:scaleType="centerInside"
            android:src="@drawable/back" />

        <ImageView
            android:id="@+id/iv10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/back" />

        <ImageView
            android:id="@+id/iv11"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/back" />

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>